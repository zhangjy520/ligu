<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cc.ligu.mvc.persistence.dao.A_MenuExtensionMapper" >

    <resultMap id="ExtensionBaseResultMap" type="cc.ligu.mvc.modelView.MenuView"
               extends="cc.ligu.mvc.persistence.dao.MenuMapper.BaseResultMap" >
        <result column="role_id" property="roleId" jdbcType="VARCHAR" />
    </resultMap>

    <select id="selectMenusByRoleId" resultMap="ExtensionBaseResultMap" parameterType="java.lang.Integer" >
        select
        <include refid="cc.ligu.mvc.persistence.dao.MenuMapper.Base_Column_List" />, role_id
        from ref_role_menu ref, sys_menu menu
        WHERE ref.role_id=#{roleId} AND ref.menu_id = menu.id
    </select>

</mapper>
